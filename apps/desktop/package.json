{
  "name": "genesis-desktop",
  "version": "0.1.0",
  "private": true,
  "description": "GENESIS ENGINE Desktop App (Electron + React + TypeScript)",
  "main": "electron/main.ts",
  "scripts": {
    "dev:ui": "vite",
    "build:ui": "vite build",
    "preview:ui": "vite preview",
    "dev": "concurrently -k \"npm:dev:ui\" \"npm:dev:electron\"",
    "dev:electron": "ts-node-dev --respawn electron/main.ts",
    "build": "npm run build:ui",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^9.0.1",
    "electron": "^32.0.1",
    "eslint": "^9.12.0",
    "@typescript-eslint/parser": "^8.8.1",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.8"
  }
}
